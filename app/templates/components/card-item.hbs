<div class="selector" id={{author}}>
  <div class="options {{current}}">
    <button class="toggle" {{action "switchCurrent" "truth"}}>Truth</button>
    <button class="toggle" {{action "switchCurrent" "dare"}}>Dare</button>
  </div>

  <div class="cards">
    {{#liquid-if currentIsTruth class="cardsDance"}}
      {{#each truth as |card|}}
        {{#game-pair card=card }}{{/game-pair}}
      {{/each}}
    {{else}}
      {{#each dare as |otherCard|}}
        {{#game-pair card=otherCard }}{{/game-pair}}
      {{/each}}
    {{/liquid-if}}
  </div>
</div>
{{yield}}
